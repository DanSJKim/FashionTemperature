{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "import/no-unresolved": "off",
        "import/extensions":"off",
        "react/jsx-filename-extension": [
            1,
            {
            "extensions": [".js", ".jsx"]
            }
            
            ],
            "prettier/prettier": [
                "error",
                {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100
                }
            ]
       
    }
}
